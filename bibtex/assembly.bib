issn = {01460404},
journal = {Investigative Ophthalmology and Visual Science},
number = {8},
pages = {3950--3953},
pmid = {20335618},
title = {{In vitro efficacy of antifungal treatment using riboflavin/UV-A (365 nm) combination and amphotericin B}},
