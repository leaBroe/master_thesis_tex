issn = {0022-2836},
journal = {Journal of Molecular Biology},
keywords = {1,3-1,4-$\beta$-glucanase,active-site mutant,oligosaccharide complex,protein structure,protein–carbohydrate interactions},
number = {4},
pages = {1211--1225},
title = {{Structural Basis for the Substrate Specificity of a Bacillus 1,3-1,4-$\beta$-Glucanase}},
url = {https://www.sciencedirect.com/science/article/pii/S0022283606000428},
volume = {357},
year = {2006}
}
